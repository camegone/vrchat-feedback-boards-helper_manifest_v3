{
    "manifest_version": 2,
    "name": "Canny extension for End-user",
    "description": "Improve usability of canny.io for end-user",
    "version": "1.0",
    "icons": {
        "48": "/images/icon1_48.png",
        "128": "/images/icon1_128.png"
    },
    "page_action": {
        "default_icon": {
            "48": "/images/icon1_48.png",
            "128": "/images/icon1_128.png"
        },
        "show_matches": [
            "https://*.canny.io/*",
            "https://feedback.vrchat.com/*"
        ],
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true,
        "browser_style": false,
        "chrome_style": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.canny.io/*",

                // One of user company VRChat inc. uses their domain for primary URL of feedback boards.
                // It is another name of https://vrchat.canny.io
                "https://feedback.vrchat.com/*"
            ],
            "js": [
                "content_script_canny.js"
            ],
            "css": [
                "content_script_canny.css"
            ]
        }
    ]
}